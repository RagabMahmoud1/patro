        <record id="view_stock_move_line_detailed_operation_tree_71110" model="ir.ui.view">
            <field name="name">stock.move.line.tree.inherit</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
            <field name="arch" type="xml">

               <xpath expr="//field[@name='product_id']" position="after">
                    <field name="qty_available"/>
                </xpath>


            </field>
        </record>


        <record id="view_picking_form_8880" model="ir.ui.view">
            <field name="name">stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='move_ids_without_package']//tree//field[@name='product_uom_qty']" position="attributes">
                    <attribute name="sum">Total Quantity</attribute>
                </xpath>
                 <xpath expr="//field[@name='move_ids_without_package']//tree//field[@name='quantity_done']" position="attributes">
                    <attribute name="sum">Total Quantity</attribute>
                </xpath>

            </field>
        </record>

        <!-- Add search view for stock.move.line -->
        <record id="stock_move_line_search_view_custom" model="ir.ui.view">
            <field name="name">stock.move.line.search.custom</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.stock_move_line_view_search"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <field name="ore_id"/>
                    <field name="session_id"/>
                    <field name="categ_id"/>
                    <field name="color"/>
                    <field name="size"/>
                    <field name="model_year"/>
                    
                    <!-- Filters -->
                    <filter string="Material Type" name="ore_filter" domain="[('ore_id', '!=', False)]"/>
                    <filter string="Season" name="session_filter" domain="[('session_id', '!=', False)]"/>
                    <filter string="Has Color" name="color_filter" domain="[('color', '!=', False)]"/>
                    <filter string="Has Size" name="size_filter" domain="[('size', '!=', False)]"/>
                    
                    <!-- Group By -->
                    <filter string="Material Type" name="group_ore" context="{'group_by':'ore_id'}"/>
                    <filter string="Season" name="group_session" context="{'group_by':'session_id'}"/>
                    <filter string="Category" name="group_category" context="{'group_by':'categ_id'}"/>
                    <filter string="Color" name="group_color" context="{'group_by':'color'}"/>
                    <filter string="Size" name="group_size" context="{'group_by':'size'}"/>
                    <filter string="Model Year" name="group_model_year" context="{'group_by':'model_year'}"/>
                </xpath>
            </field>
        </record>


    </data>
</odoo>
