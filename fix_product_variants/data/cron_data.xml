<odoo>
    <!-- Server Action to reset attribute lines -->
    <record id="server_action_reset_variant_attributes" model="ir.actions.server">
        <field name="name">Reset Product Attribute Lines</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="state">code</field>
        <field name="binding_model_id" ref="product.model_product_template"/>  
        <field name="binding_type">action</field> 
        <field name="code">model.reset_template_attribute_lines(records.ids)
        </field>
    </record>
</odoo>
