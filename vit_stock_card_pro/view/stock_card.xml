<odoo>
	<data>

		<!-- tree view -->
		<record id="view_stock_card_tree" model="ir.ui.view">
		    <field name="name">vit_stock_card_tree</field>
		    <field name="model">vit.stock_card</field>
		    <field name="arch" type="xml">
		    	<tree string="list stock_card" decoration-info="state=='done'" decoration-muted="state=='draft'">
					<field name="product_id" />
                    <field name="breakdown_sn"/>
                    <field name="lot_id"/>
		            <field name="ref"/>
					<field name="date_start" />	
					<field name="date_end" />		
					<field name="location_id" />	
					<field name="state" />			
					<field name="user_id" />				            
		        </tree>    
		    </field>
		</record>

		<!-- form view -->
        <record id="view_stock_card_form" model="ir.ui.view">
            <field name="name">vit_stock_card_form</field>
            <field name="model">vit.stock_card</field>
            <field name="arch" type="xml">
            	<form string="stock_card form" >
            		<header>
						<button string="Calculate" type="object" name="action_calculate" class="oe_highlight"
						 	 states="draft" />
						<button string="Confirm" type="object" name="action_confirm" class="oe_highlight"
						 	 states="draft" />
						<button string="Cancel" type="object" name="action_draft"
						 	 states="open" />
						<button string="Export xlsx" type="object" name="export"/>
            			<field name="state" widget="statusbar" />
            		</header>
            		<sheet>
						<div class="oe_title">
							<label for="name" class="oe_edit_only"
								 string="Product" />
							<h1>
								<field name="product_id" />
							</h1>
						</div>
			            <group>
			            	<group>
								<field name="date_start" />
								<field name="date_end" />
			                    <field name="breakdown_sn"/>
								<field name="lot_id" domain="[('product_id','=',product_id)]"
									   attrs="{'invisible': [('breakdown_sn','=',False)] }" />
								<field name="expired_date" />

				            </group>
				            <group>
								<field name="location_id" />
								<field name="category_id" />
								<field name="ref" />
								<field name="user_id" />
								<field name="name" invisible="1"/>
								<field name="name_txt_file" invisible="1"/>
                                <field name="export_data_txt" invisible="1"/>
                                <h6>Export Complete</h6>
                                <p>Here is the exported file: <field name="export_data" readonly="1" filename="name"/></p>
				            </group>
				        </group>

		            	<!--xpath expr="">
		            	</xpath-->

			            <notebook>
			            	<page string="Lines">
					            <field name="line_ids">
					            	<tree string="Detail Lines">
										<!-- <field name="move_id" />			 -->
										<field name="date" />
										<field name="picking_id" />
										<field name="partner_id" />
										<field name="lot_id" />
										<field name="name" />
										<field name="qty_start" />
										<field name="qty_in" />
										<field name="qty_out" />
										<field name="qty_balance" />
										<field name="product_uom_id" />
						            </tree>
						        </field>
						    </page>
						</notebook>
					</sheet>
			    </form>
            </field>
        </record>



	</data>
</odoo>