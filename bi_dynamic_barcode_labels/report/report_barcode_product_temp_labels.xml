<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="product_temp_barcode_labels">
        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="doc">
                <t t-foreach="range(doc.qty)" t-as='l'>
                    <t t-foreach="doc.product_id.seller_ids" t-as="seller">
                        <tr t-if="seller">
                        </tr>
                    </t>
                    <div class="page" style="text-align:center">
                        <div class="row" style="border:1pt solid black;height:26mm;width:57mm">
                            <div style="width:65%">
                                <div style="font-size:10px;margin-top:4px;margin-bottom:6px">
                                    <strong t-esc="doc.product_id.name"/>
                                </div>

                                <t t-set="barcode_info" t-value="get_barcode_details_info"/>
                                <t t-if="doc.product_id.barcode">
                                            <img alt="Barcode"
                                                 t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % (barcode_info['barcode_type'], doc.product_id.barcode, 600, 100)"
                                                 t-attf-style="width: #{barcode_info['barcode_width']}px;height: #{barcode_info['barcode_height']}px;"
                                            />
                                    <br/>

                                    <span style="font-size:10px" t-field="doc.product_id.barcode" />
                                </t>

                            </div>
                            <div  style="width:35%">
                                <div style="height:13mm;font-size:10px;margin:2px" class="text-right">
                                    <t t-if="doc.product_id.default_code">
                                        <span t-field="doc.product_id.default_code"/>
                                    </t>
                                    <br/>
                                     <t t-if="doc.product_id.barcode_value">
                                        <span t-field="doc.product_id.barcode_value"/>
                                    </t>


                                </div>
                                <div style="height:13mm;text-align:right;font-size:10px;margin:2px;vertical-align:bottom"  >
                                        <span t-field="doc.product_id.list_price"/>
                                        <span t-field="doc.product_id.currency_id.symbol"/>


                                </div>


                            </div>

                        </div>
